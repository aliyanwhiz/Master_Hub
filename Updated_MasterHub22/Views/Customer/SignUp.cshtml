@using DashBoard2.Models;
@{
	Layout = "../shared/_Layoutwebsite.cshtml";
}
@model Customer
<div class="content">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-lg-6 mx-auto">
				<div class="login-wrap">
					<div class="login-header">
						<h3>User Signup</h3>
					</div>
					<!-- Login Form -->
					<form action="" method="post">
						<div class="row">
							<div class="col-md-6">
								<label class="col-form-label">User Name</label>
								<input type="text" class="form-control" placeholder="Enter your name" name="Cus_name" required maxlength="10" title="Maximum length is 10 characters are required">
							</div>
							<div class="col-md-6">
								<label class="col-form-label">User E-mail</label>
								<input type="email" class="form-control" placeholder="example@email.com" name="Cus_email" required maxlength="25" title="Maximum length is 25 characters are required">
							</div>
						</div><br>
						<div class="row">
							<div class="col-md-12">
								<label class="col-form-label d-block">User Password<span class="brief-bio float-end">Must be 15 Characters at Least</span></label>
								<div class="pass-group">
									<input type="text" class="form-control pass-input" placeholder="Enter Your Password" name="Cus_password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{15,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 15 or more characters" maxlength="15" required>
									<span class="toggle-password feather-eye"></span>
								</div>
							</div>
						</div><br/>
						<div class="row">
							<div class="col-md-12">
								<label class="col-form-label">User Phone Number</label>
								<div class="form-group">
									<input type="number" class="form-control form-control-lg group_formcontrol" id="phone" placeholder="(256) 789-6253" name="Cus_phone"  title="Alphabet letters are not allow" maxlength="11" required>
								</div>
							</div>
						</div><br>
						<div class="row">
							<div class="col-md-6">
								<label class="col-form-label d-block">User City</label>
								<div class="pass-group">
									<input type="text" class="form-control pass-input" placeholder="User City" name="Cus_city"  pattern="[A-Za-z]{10}"  maxlength="10" required>
								</div>
							</div>
							<div class="col-md-6">
								<label class="col-form-label">User Address</label>
								<div class="form-group">
									<input type="text" class="form-control form-control-lg group_formcontrol" id="phone" placeholder="User Address" name="Cus_address" pattern="[A-Za-z]{20}" maxlength="20" required>
								</div>
							</div>
						</div><br>
						<button class="btn btn-primary w-100 login-btn" type="submit" value="signup">Signup</button>
						<div class="login-or">
							<span class="or-line"></span>
							<span class="span-or">Already have an account <a href="@Url.Action("Login","Customer")">Sign in</a></span>
							<p class="no-acc"></p>
						</div>
					</form>
					<!-- /Login Form -->

				</div>
			</div>
		</div>

	</div>
</div>
